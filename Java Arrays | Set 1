
class Solution {
    public String average(int arr[]) {
        double sum =0;
        int len = arr.length;
          if (arr.length == 0) return "0.00";
        
        for(int i = 0;i<arr.length;i++){
            sum +=arr[i];
           
          
           
        } 
        double average = sum/len;
         return String.format("%.2f", average);
    }
}
